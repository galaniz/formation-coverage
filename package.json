{
  "name": "@alanizcreative/formation-coverage",
  "version": "0.0.4",
  "description": "Utility to generate code coverage reports for Playwright tests from TypeScript source code",
  "main": "./lib/coverage.js",
  "packageManager": "pnpm@10.23.0",
  "type": "module",
  "files": [
    "./lib"
  ],
  "exports": {
    "./*": {
      "import": "./lib/*"
    }
  },
  "scripts": {
    "build": "npx tsc --project tsconfig.build.json && pnpm minify",
    "minify": "find lib -name \"*.js\" -exec terser {} -o {} --compress \\;",
    "lint": "npx eslint .",
    "test": "vitest --run --reporter verbose --coverage",
    "release": "release-it"
  },
  "keywords": [
    "playwright",
    "typescript",
    "code-coverage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation-coverage.git"
  },
  "bugs": {
    "url": "https://github.com/galaniz/formation-coverage/issues"
  },
  "homepage": "https://github.com/galaniz/formation-coverage#readme",
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "glob": "13.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-instrument": "6.0.3",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "v8-to-istanbul": "^9.3.0"
  },
  "devDependencies": {
    "@types/istanbul-lib-coverage": "2.0.6",
    "@types/istanbul-lib-instrument": "1.7.8",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "@vitest/coverage-v8": "4.0.13",
    "eslint": "9.39.1",
    "memfs": "4.51.0",
    "release-it": "19.0.6",
    "terser": "5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "4.0.13"
  },
  "peerDependencies": {
    "@playwright/test": "^1.53.0"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]",
      "tag": true,
      "push": true
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
